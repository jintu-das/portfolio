---
import { Image } from "astro:assets";
const { thumbnail, title, link, description } = Astro.props;
---

<div>
  <a href={link} target="_blank" aria-label={title}>
    <Image
      width={370}
      height={290}
      loading="lazy"
      src={thumbnail}
      alt="Content Craft"
      class="aspect-video object-cover rounded-lg"
    />
  </a>

  <h3 class="text-base font-medium pt-4 pb-2">{title}</h3>
  <p class="font-light text-sm text-muted line-clamp-3">
    {description}
  </p>
</div>
